<div class="yui-u">
  <fieldset>
    <legend>Response</legend>
    <div id="enquiry_response">
      <%= text_area :response, :body, {:cols => 60, :rows => 2, :class => 'fullwidth'} %>
    </div>
    <p>
      <%=  link_to_remote( icon('send') + ' ' + t('send_response'),
        :submit => "enquiry_response",
        :url => { :id => @enquiry, :controller => 'EnquiryResponses', :action => :create },
        :method => :post,
        :complete => "alert('Email sent')",
        :confirm => "Are you sure you want to send email ?"
      )
    %>
    </p>
  </fieldset>
</div>
